{
  "name": "Anubhab's Assistent",
  "description": "Give me the paragraph that you need to summarize",
  "version": "1.0",
  "manifest_version": 3,
  "permissions":[
    "activeTab",
    "storage",
    "sidePanel",
    "scripting"
  ],
  "action": {
    "default_tittle":"Research Assistent"
  },
  "side_panel":{
    "default_path":"sidepanel.html"
  },
  "background":{
    "service_worker":"background.js"
  },
  "host_permissions":[
    "http://localhost:8080/*",
    "<all_urls>"
  ],
  "content_security_policy":{
    "extension_pages":"script-src 'self'; object-src 'self'"
  }
}